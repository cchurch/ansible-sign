        g = m[1] * a / 255;
        b = m[2] * a / 255;
        pixels.setPixelColor(p, pixels.Color(r, g, b));
    }

    pixels.show();
    n = (n < (rows_length - 1)) ? n + 1 : -1;

    return n;
}

